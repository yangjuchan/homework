<h1>Listing tests</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Link url</th>
  </tr>

<% @tests.each do |test| %>
  <tr>
    <td><%=h test.title %></td>
    <td><%=h test.description %></td>
    <td><%=h test.link_url %></td>
    <td><%= link_to 'Show', test %></td>
    <td><%= link_to 'Edit', edit_test_path(test) %></td>
    <td><%= link_to 'Destroy', test, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New test', new_test_path %>